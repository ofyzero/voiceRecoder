<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/UploadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="          İsminizi yazıp yükle tuşuna bastıktan sonra lütfen 5 dakika kadar programı kapatmayın ve başka ekrana geçmeyin. Yardımınız için teşekkür ederiz."
        android:textSize="20dp" />

    <EditText

        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="Ad ve Soyad"
        android:inputType="textPersonName"
        android:textSize="20dp"
        tools:layout_editor_absoluteY="99dp" />

    <Button
        android:id="@+id/Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YÜKLE"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        tools:layout_editor_absoluteY="147dp" />

    <TextView
        android:id="@+id/mTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        tools:layout_editor_absoluteY="222dp" />

</android.support.constraint.ConstraintLayout>